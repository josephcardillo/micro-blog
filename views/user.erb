<%= erb :header %>

<div class="container1">

  <% if current_user != nil && current_user.id == @user.id %>
    <h2><%= @user.fname %> <%= @user.lname %>'s Page</h2>
    <h1>Account Details</h1>
  <div class="postBackGround">
    <p>Username: <%= @user.username %></p>
    <p>Email: <%= @user.email %></p>
    <!-- <p>Password: <%= @user.password %></p> -->
  </div>

  <!-- Hide below on button click -->

  <button onclick="toggle.open()" type="button" name="button">Edit Profile</button>
  <div class="toggleEditUser">
      <h2>Edit User</h2>
      <form action="/user/<%= @user.id %>" method="post">
          <input type="hidden" name="_method" value="PUT">

          <input type="text" name="fname" value="<%= @user.fname %>"><br>
          <input type="text" name="lname" value="<%= @user.lname %>"><br>
          <input type="text" name="username" value="<%= @user.username %>"><br>
          <input type="text" name="email" value="<%= @user.email %>"><br>
          <input type="text" name="password" value="<%= @user.password %>"><br>

          <input class="inputButton" onclick="toggle.close()" type="submit" value="Update User Profile">
      </form>

      <form class="" action="/user/<%=@user.id%>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input class="inputButton" type="submit" name="" value="Delete Account">
      </form>
  </div>

  <% else %>
    <h2><%= @user.fname %> <%= @user.lname %>'s Posts</h2>
<% end %>

  <% @posts.each do |post| %>

  <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
  <div class="postBackGround">
    <p><%= post.content %></p>
  </div>
  <% end %>
</div>
